{
  "name": "@stackla/widget-templates",
  "version": "0.0.1",
  "description": "Widget Templates",
  "scripts": {
    "eslint": "eslint widgets/. --fix",
    "typecheck": "npx tsc",
    "prettier": "prettier '**/*.{js,ts}' --write",
    "stylelint": "stylelint **/*.scss --fix",
    "lint": "npm run eslint && npm run stylelint",
    "test": "jest",
    "build": "APP_ENV=production node ./esbuild.js",
    "dev": "APP_ENV=development node ./esbuild.js",
    "start": "NODE_ENV=development APP_ENV=testing sls offline start --noPrependStageInUrl --reloadHandler --stage=development --region=us-west-1 --host=127.0.0.1"
  },
  "license": "MIT",
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.21.5"
  },
  "devDependencies": {
    "@happy-dom/jest-environment": "^14.12.3",
    "@stackla/eslint-config": "^1.0.0",
    "@stackla/jest-config": "^1.0.6",
    "@stackla/types": "^0.0.19",
    "@types/glidejs__glide": "^3.6.5",
    "@types/jest": "^29.5.12",
    "@types/masonry-layout": "^4.2.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "esbuild": "^0.20.2",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.56.0",
    "eslint-config-stylelint": "^21.0.0",
    "eslint-plugin-css": "^0.9.2",
    "eslint-plugin-promise": "^6.2.0",
    "jiti": "^1.21.6",
    "sass": "^1.77.6",
    "serverless": "^3.38.0",
    "serverless-scriptable-plugin": "^1.3.1",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@glidejs/glide": "^3.6.1",
    "happy-dom": "^14.12.3",
    "masonry-layout": "^4.2.2"
  }
}
