{
  "name": "@stackla/widget-templates",
  "version": "0.0.1",
  "description": "Widget Templates",
  "scripts": {
    "eslint": "eslint . --ext .ts,.tsx",
    "typecheck": "npx tsc",
    "prettier": "prettier '**/*.{js,ts}' --write",
    "stylelint": "stylelint **/*.scss",
    "lint": "npm run eslint && npm run stylelint",
    "lint:fix": "npm run eslint -- --fix && npm run stylelint -- --fix",
    "test": "jest && npm run test:e2e",
    "cy:run": "cypress run --browser chrome --headless",
    "test:e2e": "start-server-and-test --expect 400 start http://127.0.0.1:4002/preview cy:run",
    "build": "node ./esbuild.js",
    "watch": "APP_ENV=development node ./esbuild.js --watch",
    "dev": "APP_ENV=development node ./esbuild.js",
    "start:lambda": "NODE_ENV=development APP_ENV=testing sls offline start --noPrependStageInUrl --reloadHandler --stage=development --region=us-west-1 --host=127.0.0.1",
    "start": "npx concurrently \"npm run watch\" \"npm run start:lambda\""
  },
  "license": "MIT",
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.21.5"
  },
  "devDependencies": {
    "@happy-dom/jest-environment": "^14.12.3",
    "@stackla/eslint-config": "^1.0.0",
    "@stackla/jest-config": "^1.0.6",
    "@stackla/lambda-api-bootstrap": "^1.0.12",
    "@types/glidejs__glide": "^3.6.5",
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "chokidar": "^3.6.0",
    "concurrently": "^8.2.2",
    "copy-webpack-plugin": "^12.0.2",
    "cypress": "^13.13.2",
    "esbuild": "^0.20.2",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^8.56.0",
    "eslint-config-stylelint": "^21.0.0",
    "eslint-plugin-css": "^0.9.2",
    "eslint-plugin-promise": "^6.2.0",
    "glob": "^11.0.0",
    "jiti": "^1.21.6",
    "sass": "^1.77.6",
    "serverless": "^3.38.0",
    "serverless-api-gateway-caching": "^1.10.4",
    "serverless-scriptable-plugin": "^1.3.1",
    "serverless-webpack": "^5.14.1",
    "start-server-and-test": "^2.0.5",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-prettier": "^5.0.0",
    "stylelint-scss": "^6.5.0",
    "swc-loader": "^0.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@glidejs/glide": "^3.6.1",
    "@stackla/ugc-widgets": "^0.0.44",
    "happy-dom": "^14.12.3",
    "hbs": "^4.2.0",
    "masonry-layout": "^4.2.2",
    "serverless-hooks-plugin": "^1.1.0",
    "serverless-http": "^3.2.0",
    "swiper": "^11.1.9"
  }
}
