{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES6",
    "module": "es6",
    "lib": ["DOM"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": false,
    "inlineSources": false,
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "paths": {
      "@widgets/*": ["./widgets/*"],
      "types": ["./types"]
    },
    "jsx": "react",
    "jsxFactory": "createElement",
    "jsxFragmentFactory": "createFragment",
    "types": ["node", "jest", "cypress"]
  },
  "include": ["widgets/**/*.ts", "widgets/**/*.tsx"],
  "exclude": ["widget-utils"]
}
